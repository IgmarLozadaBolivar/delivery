---
const {
    title = "",
    paragraph = "",
} = Astro.props;
---

<div class="space-y-6">
    <div class="pb-4 flex flex-col gap-1">
        <h2 class="text-3xl font-bold tracking-tight font-[Work_Sans]">
            {title}
        </h2>

        <p class="text-base text-slate-500 font-[Work_Sans]">
            {paragraph}
        </p>
    </div>

    <slot />

    <div class="py-4 flex justify-between font-[Work_Sans]">
        <a
            href="/auth/register"
            class="font-medium hover:text-slate-700 transition-colors text-slate-600 underline underline-offset-3"
        >
            Crear cuenta
        </a>
        <a
            href="#"
            class="font-medium hover:text-slate-800 transition-colors text-slate-700"
        >
            ¿Olvidaste tu contraseña?
        </a>
    </div>
</div>
